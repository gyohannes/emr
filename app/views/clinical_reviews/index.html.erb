<p id="notice"><%= notice %></p>

<h1>Clinical Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Art patient</th>
      <th>Who staging</th>
      <th>Clinical review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clinical_reviews.each do |clinical_review| %>
      <tr>
        <td><%= clinical_review.date %></td>
        <td><%= clinical_review.art_patient %></td>
        <td><%= clinical_review.who_staging %></td>
        <td><%= clinical_review.clinical_review %></td>
        <td><%= link_to 'Show', clinical_review %></td>
        <td><%= link_to 'Edit', edit_clinical_review_path(clinical_review) %></td>
        <td><%= link_to 'Destroy', clinical_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Clinical Review', new_clinical_review_path %>
