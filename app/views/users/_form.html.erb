<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :first_name %>
    <%= f.input :father_name %>
    <%= f.input :grand_father_name %>
    <%= f.association :organization_structure, collection: [@user.organization_structure] %>
    <%= f.association :facility, collection: [@user.facility] %>
    <%= f.association :roles %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
